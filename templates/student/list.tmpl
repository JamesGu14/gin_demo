        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h2>Student List</h2>
            <a href="/student/create" class="btn btn-primary">Create</a>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Birthday</th>
                        <th>ClassID</th>
                        <th>Is Monitor</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{ range .students }}
                    <tr>
                        <td>{{.UserName}}</td>
                        <td>{{.FullName}}</td>
                        <td>{{.Email}}</td>
                        <td>{{.Birthday}}</td>
                        <td>{{.ClassID}}</td>
                        <td>{{.IsMonitor}}</td>
                        <td><a href="/student/delete/{{ .Model.ID}}" class="btn btn-danger btn-sm">Delete</a></td>
                    </tr>
                    {{ end }}
                    </tbody>
                </table>
            </div>
        </main>
